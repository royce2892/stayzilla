<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/city_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/city_image"
        android:layout_toRightOf="@+id/city_image"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/city_addr"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/city_name"
        android:layout_toRightOf="@+id/city_image"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="15sp" />
    
     <TextView
        android:id="@+id/city_types"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/city_addr"
        android:layout_toRightOf="@+id/city_image"
        android:textColor="@color/black"
        android:textSize="12sp" />
     
     <TextView
        android:id="@+id/city_rate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/city_types"
        android:layout_toRightOf="@+id/city_image"
        android:textColor="@color/black"
        android:textSize="12sp" />
     
     
    

</RelativeLayout>