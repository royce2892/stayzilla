<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.royce.stayzilla.activity.MainActivity" >

    <AutoCompleteTextView
        android:id="@+id/atv_places"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="Enter place here" />

    <TextView
        android:id="@+id/wheels_tv1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/atv_places"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/from_date"
        android:gravity="left|center_vertical"
        android:text="From"
        android:textColor="@color/blue"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/from_date"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/atv_places"
        android:calendarViewShown="false" />

    <TextView
        android:id="@+id/wheels_tv2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/from_date"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/to_date"
        android:gravity="left|center_vertical"
        android:text="To"
        android:textColor="@color/blue"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/to_date"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/from_date"
        android:calendarViewShown="false" />

    <TextView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/to_date"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Find your stay"
        android:textColor="@color/blue"
        android:textSize="24sp" />

</RelativeLayout>